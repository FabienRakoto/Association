{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}



<div class="col-xl-4"></div>
   <div class="col-xl-10 order-xl-1 center">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
               
                <div class="col-8">
                  <h3 class="mb-0">New User</h3>
                </div>
              </div>
            </div>
            <div class="card-body">

          {{form_start(form)}}
            <h6 class="heading-small text-muted mb-4">User information</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        {{form_row(form.username,{'attr':{'class':'form-control form-control-alternative', 'placeholder':'Username'}})}}
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        {{form_row(form.email,{'attr':{'class':'form-control form-control-alternative', 'placeholder':'adress mail ...'}})}}
                      </div>
                    </div>
                  </div>
                </div>
                <hr class="my-4" />
                <!-- Address -->
                <h6 class="heading-small text-muted mb-4">Password managing</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        {{form_row(form.password,  {'attr' : {'class':'form-control form-control-alternative', 'placeholder':'Password ...' }})}}
                      </div>
                    </div>
                     <div class="col-md-6">
                      <div class="form-group">
                        {{form_row(form.confirm_password,  {'attr' : {'class':'form-control form-control-alternative', 'placeholder':'confirm password...' }})}}
                      </div>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-warning btn-lg"> Save this new user </button>

                </div>
                <hr class="my-4" />
       {{form_end(form)}}
            </div>
          </div>
        </div>
{% endblock %}